@model EnrollmentViewModel

@{
    ViewData["Ttile"] = "Detele course";
}

<h4>(@Model?.ActiveCourse?.CourseName)</h4>
<p>Are you sure you want to delete this course and its associated students?</p>

@if (Model.AllStudents != null)
{
    foreach (var student in Model.AllStudents)
    {
        <p>-@student?.StudentName</p>
    }
}

<form asp-controller="CourseRegistration" asp-action="Deletion" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" asp-for="ActiveCourse.CourseId" />

    <br />
    <button type="submit" class="btn btn-danger">Delete this course</button>
    <a asp-controller="CourseRegistration" asp-action="AllCourses" class="btn btn-primary">Cancel</a>

</form>
<img class="deleteCourse" src="~/css/recycle-bin.jpg"/>